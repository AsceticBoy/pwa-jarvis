{
  "name": "pwa-jarvis",
  "version": "1.0.0",
  "description": "A simply PWA Application for Jarvis",
  "main": "app.js",
  "repository": "git@github.com:AsceticBoy/pwa-jarvis.git",
  "author": "Ascetic <398121373@qq.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "web-push": "^3.2.5"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.1.0",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "copy-webpack-plugin": "^4.3.0",
    "css-loader": "^0.28.7",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^2.30.1",
    "less-loader": "^4.0.5",
    "open-browser-webpack-plugin": "^0.0.5",
    "postcss-loader": "^2.0.9",
    "postcss-pxtorem": "^4.0.1",
    "style-loader": "^0.19.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-hot-middleware": "^2.21.0"
  },
  "engines": {
    "node": ">=7.1.0",
    "npm": "^4.0.0"
  },
  "scripts": {
    "clean": "rm -rf ./web",
    "compile": "better-npm-run compile",
    "start": "better-npm-run start",
    "build": "better-npm-run build"
  },
  "betterScripts": {
    "compile": {
      "command": "node scripts/compiler.js",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "node scripts/bootstrap.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8000,
        "DEBUG": "app:*"
      }
    },
    "build": {
      "command": "npm run clean && npm run compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  }
}
